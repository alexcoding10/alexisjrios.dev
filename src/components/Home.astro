<script>
  const vsc1 = document.getElementById("vsc1");
  const juntoswireframe = document.getElementById("juntoswireframe");

  const initVsc1 = {
    top: 33.33, // Valor predeterminado: 33.33%
    left: 33.33,
  };

  const initJuntosWireframe = {
    top: 16.67, // Valor predeterminado: 33.33%
  };

  // Función para mover la imagen
  function moveImage(top: number, left: number, image: HTMLElement) {
    image.style.top = `${top}%`; // Ajusta la posición vertical
    if (left != 0) {
      image.style.left = `${left}%`; // Ajusta la posición horizontal
    }
  }
  // Evento para dispositivos móviles (click/tap)
  vsc1?.addEventListener("click", () => {
    if (vsc1.style.top === "25%") {
      moveImage(initVsc1.top, initVsc1.left, vsc1); // Restaura la posición original
    } else {
      moveImage(25, 25, vsc1); // Mueve la imagen a top: 25%, left: 25%
    }
  });

  // Evento mouseenter: Mover la imagen cuando el mouse entra
  vsc1?.addEventListener('mouseenter', () => {
    moveImage(25, 25, vsc1); // Mueve la imagen a top: 25%, left: 25%
  });

  // Evento mouseleave: Restaurar la posición original cuando el mouse sale
  vsc1?.addEventListener('mouseleave', () => {
    moveImage(initVsc1.top, initVsc1.left, vsc1); // Restaura la posición original
  });

  juntoswireframe?.addEventListener("click", () => {
    if (juntoswireframe.style.top === "11.11%") {
      moveImage(initJuntosWireframe.top, 0, juntoswireframe);
    } else {
      moveImage(11.11, 0, juntoswireframe);
    }
  });
  // Evento mouseenter: Mover la imagen cuando el mouse entra
  juntoswireframe?.addEventListener("mouseenter", () => {
    moveImage(11.11, 0, juntoswireframe); // Mueve la imagen a top: 11.11%, left: original
  });

  // Evento mouseleave: Restaurar la posición original cuando el mouse sale
  juntoswireframe?.addEventListener("mouseleave", () => {
    moveImage(initJuntosWireframe.top, 0, juntoswireframe); // Restaura la posición original
  });
</script>
