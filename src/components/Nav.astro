  <ul id="navbar" class="list-none flex flex-row gap-4">
    <li><a href="#home" class="hover:text-violet-400">Inicio</a></li>
    <li><a href="#project" class="hover:text-violet-400">Proyectos</a></li>
    <li><a href="#contact" class="hover:text-violet-400">Contactos</a></li>
  </ul>
</nav>


<style>
  /* Estilo base del navbar */
  #navbar {
    background-color: rgba(155, 128, 255, 0); /* Fondo transparente inicialmente */
    border-radius: 12px;
    padding: 5px 20px; /* Ajuste de padding */
    transition:
      background-color 0.5s ease-out,
      box-shadow 0.5s ease-out,
  }

  nav {
    z-index: 9999;
  }

  /* Estilo cuando se agrega la clase 'scrolled' */
  #navbar.scrolled {
    background-color: rgba(69, 69, 69, 0.8); /* Fondo con opacidad */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.4); /* Sombra para destacar el navbar */
    border-radius: 12px;
    padding: 5px 20px; /* Ajuste de padding */
  }
</style>

<script>
  // Selecciona el navbar
  const navbar = document.getElementById("navbar");

  // FunciÃ³n para manejar el scroll
  function handleScroll() {
    if (window.scrollY > 100) {
      // Agrega la clase 'scrolled' si el scroll supera los 100px
      navbar.classList.add("scrolled");
    } else {
      // Remueve la clase 'scrolled' si el scroll es menor o igual a 100px
      navbar.classList.remove("scrolled");
    }
  }

  // Agrega el evento de scroll
  window.addEventListener("scroll", handleScroll);
</script>
